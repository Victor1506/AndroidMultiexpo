<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/rotateModeImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@color/colorGrey"
        android:src="@drawable/ic_rotate"

        />

    <ImageButton
        android:id="@+id/transparencyModeImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/rotateModeImageButton"
        android:layout_toRightOf="@+id/rotateModeImageButton"
        android:background="@color/colorGrey"
        android:src="@drawable/ic_transparency" />

    <ImageButton
        android:id="@+id/cropperModeImageButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/transparencyModeImageButton"
        android:layout_toRightOf="@+id/transparencyModeImageButton"
        android:background="@color/colorGrey"
        android:src="@drawable/ic_scissors" />
</RelativeLayout>